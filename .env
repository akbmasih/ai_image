# /ai/.env
# Environment variables for AI server with comprehensive plugin support

# Database Configuration
DATABASE_URL=postgresql://ai_user:ai_password@postgres:5432/ai_db

# MinIO Configuration
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_SECURE=false

# JWT Configuration (IMPORTANT: Use a strong secret key in production)
JWT_SECRET_KEY=your_jwt_secret_key_here_make_it_very_long_and_secure_for_production_use
JWT_ALGORITHM=RS256

# AI Model API Keys (Replace with your actual API keys)
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# External AI Service URLs (Update with your actual service endpoints)
FLUX_API_URL=http://213.192.2.72:8080
CHATTERBOX_API_URL=http://213.192.2.72:8080

# Rate Limiting Configuration
RATE_LIMIT_PER_MINUTE=50
PLUGIN_RATE_LIMIT_PER_MINUTE=20

# Cache Configuration
CACHE_ENABLED=true
FORCE_REFRESH_HEADER=X-Force-Refresh

# Logging Configuration
LOG_LEVEL=INFO
LOG_ROTATION_DAYS=60

# CORS Configuration (Update for production)
CORS_ORIGINS=["http://localhost:3000", "https://lingudesk.com", "https://www.lingudesk.com"]

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
WORKERS=1

# Plugin-specific Configuration
CHATGPT_MODEL=gpt-4o-mini
FLUX_MODEL=FLUX.1-schnell
CHATTERBOX_MODEL=chatterbox-tts

# Performance Monitoring
ENABLE_PERFORMANCE_LOGGING=true
ENABLE_REQUEST_TRACKING=true

# Security Settings
ENABLE_REQUEST_VALIDATION=true
MAX_REQUEST_SIZE_MB=10
REQUEST_TIMEOUT_SECONDS=120

# Development Settings (Set to false in production)
DEBUG_MODE=false
ENABLE_DOCS=true
ENABLE_REDOC=true